{
  "name": "vscode-mq",
  "displayName": "mq - jq like tool for markdown processing",
  "description": "mq is a jq like tool for markdown processing. This extension adds support for the mq to Visual Studio Code.",
  "author": "harehare",
  "publisher": "harehare",
  "homepage": "https://harehare.github.io/mq/",
  "icon": "assets/logo.png",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/mq.git"
  },
  "galleryBanner": {
    "color": "#123850",
    "theme": "dark"
  },
  "keywords": [
    "mq",
    "jq",
    "extension",
    "autocompletion",
    "syntax-highlighting"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mq"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mq",
        "extensions": [
          ".mq"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "assets/logo.svg",
          "dark": "assets/logo.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mq",
        "scopeName": "source.mq",
        "path": "./mq.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mq-lsp.new",
        "title": "mq: New File"
      },
      {
        "command": "mq-lsp.installLSPServer",
        "title": "mq: Install LSP Server"
      },
      {
        "command": "mq-lsp.startLSPServer",
        "title": "mq: Start LSP Server"
      },
      {
        "command": "mq-lsp.setSelectedTextAsInput",
        "title": "mq: Set selected text as input"
      },
      {
        "command": "mq-lsp.runSelectedText",
        "title": "mq: Run selected text"
      },
      {
        "command": "mq-lsp.showInput",
        "title": "mq: Show input text"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "LSP Configuration",
      "properties": {
        "mq-lsp.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to the LSP server executable"
        },
        "mq-lsp.showExamplesInNewFile": {
          "type": "boolean",
          "default": true,
          "description": "Show examples when creating a new file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.97.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "which": "^5.0.0"
  }
}
