{
  "name": "vscode-mq",
  "displayName": "mq - jq-like tool for Markdown processing",
  "description": "mq is a jq like tool for markdown processing. This extension adds support for the mq to Visual Studio Code.",
  "author": "harehare",
  "publisher": "harehare",
  "homepage": "https://mqlang.org/",
  "icon": "assets/logo.png",
  "private": true,
  "version": "0.5.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harehare/mq.git"
  },
  "galleryBanner": {
    "color": "#123850",
    "theme": "dark"
  },
  "keywords": [
    "mq",
    "jq",
    "extension",
    "autocompletion",
    "syntax-highlighting"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "mq",
        "path": "./snippets/mq.json"
      }
    ],
    "languages": [
      {
        "id": "mq",
        "aliases": [
          "mq",
          "MQ"
        ],
        "extensions": [
          ".mq"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "assets/logo.svg",
          "dark": "assets/logo.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "mq",
        "scopeName": "source.mq",
        "path": "./syntaxes/mq.tmLanguage.json"
      },
      {
        "scopeName": "markdown.mq.codeblock",
        "path": "./syntaxes/mq.markdown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.mq": "mq"
        }
      }
    ],
    "commands": [
      {
        "command": "mq.new",
        "title": "mq: New File"
      },
      {
        "command": "mq.installServers",
        "title": "mq: Install Servers"
      },
      {
        "command": "mq.startLSPServer",
        "title": "mq: Start LSP Server"
      },
      {
        "command": "mq.runSelectedText",
        "title": "mq: Run selected text"
      },
      {
        "command": "mq.executeMqFile",
        "title": "mq: Execute mq file"
      },
      {
        "command": "mq.executeMqQuery",
        "title": "mq: Execute query"
      },
      {
        "command": "mq.runQueryAndShowInEditor",
        "title": "mq: Run query and show result in new editor"
      },
      {
        "command": "mq.debugCurrentFile",
        "title": "mq: Debug current file"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "mq LSP Configuration",
      "properties": {
        "mq.lspPath": {
          "title": "LSP Server Path",
          "type": "string",
          "default": "",
          "description": "Path to the LSP server executable"
        },
        "mq.showExamplesInNewFile": {
          "title": "Show examples in new file",
          "type": "boolean",
          "default": true,
          "description": "Show examples when creating a new file"
        },
        "mq.enableCodeLens": {
          "title": "Enable Code Lens",
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Code Lens for mq queries"
        }
      }
    },
    "debuggers": [
      {
        "type": "mq",
        "label": "mq: Debug Adapter Protocol",
        "languages": [
          "mq"
        ],
        "runtime": "mq-dbg",
        "args": [
          "dap"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "queryFile"
            ],
            "properties": {
              "queryFile": {
                "type": "string",
                "description": "Specifies the query to run with mq. Usually, set to the currently edited mq file.",
                "default": "${file}"
              },
              "inputFile": {
                "type": "string",
                "description": "Specifies the input Markdown file to process with mq.",
                "default": null
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.106.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.47.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "which": "^6.0.0"
  }
}
