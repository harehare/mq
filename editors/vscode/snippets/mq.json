{
    "include": {
        "prefix": "include",
        "body": [
            "include \"${1:module}\""
        ],
        "description": "Include a module"
    },
    "foreach": {
        "prefix": "foreach",
        "body": [
            "foreach (${1:item}, ${2:values}): ${0:body};"
        ],
        "description": "Loop over each item in a collection"
    },
    "while": {
        "prefix": "while",
        "body": [
            "while (${1:condition}): ${0:body};"
        ],
        "description": "Loop while condition is true"
    },
    "def": {
        "prefix": "def",
        "body": [
            "def ${0}(${1:args}): ${2:body};"
        ],
        "description": "Define a custom function"
    },
    "fn": {
        "prefix": "fn",
        "body": [
            "fn(${0:args}): ${1:body};"
        ],
        "description": "Define an anonymous function"
    },
    "match": {
        "prefix": "match",
        "body": [
            "match (${1:value}):\n  | ${2:pattern}: ${3:body}\nend"
        ],
        "description": "Match expression with patterns"
    },
    "module": {
        "prefix": "module",
        "body": [
            "module ${1:name}:\n  ${2:body}\nend"
        ],
        "description": "Create a module that contains related functions and variables"
    },
    "macro": {
        "prefix": "macro",
        "body": [
            "macro ${1:name} do\n  ${2:body}\nend"
        ],
        "description": "Define a macro"
    },
    "quote": {
        "prefix": "quote",
        "body": [
            "quote do\n  ${1:body}\nend"
        ],
        "description": "Quote an expression"
    },
    "unquote": {
        "prefix": "unquote",
        "body": [
            "unquote(${1:expr})"
        ],
        "description": "Unquote an expression"
    }
}
